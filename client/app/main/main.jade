
section.main
  .row
    .main__sidebar.col-xs-3
      ul.nav.nav-stacked.nav-pills
        li.active(role="presentation")
          a(href='#') Posts
        li(role="presentation")
          a(href='/about-us')
        li(role="presentation")
          a(href='#') {{categories[0].name}}
    .main__content.col-xs-9
      .main__content__category.row
        .dropdown
          button.btn.btn-default.dropdown-toggle(data-toggle="dropdown") Select category
            span.caret
          ul.dropdown-menu
            li(ng-repeat="category in categories" )
              a(href="#" ng-click='onCategorySelect(category.urlName)') {{category.name}}
      .main__content__menu.row
        a(href="/create-post")
          .btn.btn-success Add

        .btn.btn-warning Edit
        .btn.btn-danger Delete
        span.text-danger {{currentCategory}}
      .main__content__table.row
        table.table.table-bordered
          tr
            th Title
            th Author
            th Content
            th Date
          tr(ng-repeat="post in posts" )
            td {{post.title}}
            td {{post.author}}
            td {{post.content}}
            td {{post.date}}




