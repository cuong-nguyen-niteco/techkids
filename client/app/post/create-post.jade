.create-post
  .container
    .form-group
      label Title
      input.form-control(placeholder="Title")
    .form-group
      label Category
      select.form-control
        option(ng-repeat="category in categories") {{category.name}}
    .form-group
      label Thumbnail
      input.form-control(type="file")
    textarea#editor(rows="10" cols="80")
    .form-group
      .btn.btn-primary(ng-click="submitPost()") Submit
